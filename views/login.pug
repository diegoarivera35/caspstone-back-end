doctype html
html
  head
    title Login
  body
    h1 Login
    form(action="/api/users/login" method="post")
      div
        label(for="email") Email:
        input(type="email" name="email" id="email")
      div
        label(for="password") Password:
        input(type="password" name="password" id="password")
      div
        button(type="submit") Login
