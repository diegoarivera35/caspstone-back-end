doctype html
html
  head
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH' crossorigin='anonymous')
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js' integrity='sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz' crossorigin='anonymous')
    link(rel='stylesheet' href='/css/styles.css')
    title Index
  body
    .container-fluid
      .nav.d-flex.justify-content-center.align-items-center.m-5
        img.card-img(src='/images/logo.svg' alt='logo')
        h1 Welcome to MedLinked
      if user
        p Logged in as #{user.email}
        form(action="/api/users/logout" method="GET")
          button(type="submit") Logout
      else
        .container.col-xs-12.col.sm-10.col-md-4.col-lg-4.glass
          form(action="/api/users/login" method="post")
            div
              label.form-label(for="email") Email:
              input.form-control(type="email" name="email" id="email" required)
            div
              label.form-label(for="password") Password:
              input.form-control(type="password" name="password" id="password" required)
            div.d-flex.justify-content-end
              button.btn.btn-primary.mt-4.col-12(type="submit") Log In
            hr

          div.d-flex.justify-content-center.mt-3
            p Don't have an account? 
               a.btn.btn-primary.m-2(href="/api/users/register") Register






