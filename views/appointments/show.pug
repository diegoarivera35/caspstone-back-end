doctype html
html
  head
    title View Appointment
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH' crossorigin='anonymous')
  body
    .container
      h1.mt-4 View Appointment
      a.btn.btn-primary.mt-3(href='/appointments') Back
      .card.mt-4
        .card-body
          p
            strong ID:
            | #{appointment._id}
          p
            strong Patient:
            | #{appointment.patientId.firstName} #{appointment.patientId.lastName}
          p
            strong Doctor:
            | #{appointment.doctorId.firstName} #{appointment.doctorId.lastName}
          p
            strong Procedure:
            | #{appointment.medicalProcedureId.name}
          p
            strong Center:
            | #{appointment.medicalCenterId.name}
          p
            strong Date:
            | #{appointment.date.toDateString()}
          p
            strong Time:
            | #{appointment.time}
          p
            strong Location:
            | #{appointment.location}
          p
            strong Status:
            span(class=appointment.status === 'Scheduled' ? 'badge bg-warning' : (appointment.status === 'Completed' ? 'badge bg-success' : 'badge bg-danger'))
              | #{appointment.status}
          if appointment.paymentId
            p
              strong Payment Status:
              span(class=appointment.paymentId.status === 'Completed' ? 'badge bg-success' : (appointment.paymentId.status === 'Pending' ? 'badge bg-warning' : 'badge bg-danger'))
                | #{appointment.paymentId.status}
          else
            p
              strong Payment Status:
              span.badge.bg-warning
                | Pending
