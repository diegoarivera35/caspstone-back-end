    script(src='https://kit.fontawesome.com/934566fbc5.js', crossorigin='anonymous')
    link(rel='stylesheet', href='/css/styles.css')
    title Patients
  body
    .container-fluid
      div.d-flex.flex-row.justify-content-between
        a.btn.btn-primary.m-0(href="/admin/dashboard") <i class="fa-solid fa-house"></i> Dashboard 
        h2.text-center.m-0 PATIENTS 
        a.btn.btn-primary.m-0(href="/patients/new") <i class="fa-solid fa-circle-plus"></i> Add New Patient
      .container-fluid.dashboard
        .container-fluid.d-flex.gap-5.flex-wrap.ultimaHora
          each patient in patients
            a.indexCard.text-dark(href=`/patients/${patient._id}` class=patient.isActive ? '' : 'inactive')
              div.d-flex.flex-column.h-100
                div.indexTitle
                  div
                    if !patient.isActive 
                      h5.Inactive.card-title=patient.firstName + " " +patient.lastName
                    else
                      h5.card-title=patient.firstName + " " +patient.lastName
                div.groove
                div.d-flex.flex-column
                  p.d-flex.flex-column 
                    strong Email:
                    | #{patient.email}
                  p.d-flex.flex-column 
                    strong Phone:
                    | #{patient.phone}
                  p.d-flex.flex-column 
                    strong Status:
                    |
                    span(style={color: patient.isActive ? 'green' : 'red'}) #{patient.isActive ? 'Active' : 'Inactive'}                    
                div.actionCard Details <i class="fa-solid fa-chevron-right"></i>




