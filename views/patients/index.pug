doctype html
html
  head
    title Patients
  body
    h1 Patients
    button(href="/patients/new") Add New Patient
    table
      thead
        tr
          th Name
          th Last Name
          th Email
          th Phone
          th Age
          th Address
          th Blood Type
          th Medical History
          th Actions
      tbody
        each patient in patients
          tr
            td= patient.firstName
            td= patient.lastName
            td= patient.email
            td= patient.phone
            td= patient.age
            td= patient.address
            td= patient.bloodType
            td= patient.medicalHistory
            td
              button(href=`/patients/${patient._id}`) View
              button(href=`/patients/${patient._id}/edit`) Edit
              form(action=`/patients/${patient._id}?_method=DELETE` method="POST" style="display:inline")
                button(type="submit") Delete
