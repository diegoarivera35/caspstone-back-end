doctype html
html
  head
    title Add New Patient
  body
    h1 Add New Patient
    form(action="/patients" method="POST")
      div
        label(for="firstName") Name:
        input(type="text" name="firstName" id="firstName" required)
      div
        label(for="lastName") Last Name:
        input(type="text" name="lastName" id="lastName" required)
      div      
        label(for="email") Email:
        input(type="email" name="email" id="email" required)
      div
        label(for="phone") Phone:
        input(type="text" name="phone" id="phone" required)
      div
        label(for="age") Age:
        input(type="number" name="age" id="age" required)
      div
        label(for="address") Address:
        input(type="text" name="address" id="address" required)
      div
        label(for="bloodType") Blood Type:
        input(type="text" name="bloodType" id="bloodType" required)
      div      
        label(for="medicalHistory") Medical History:
        textarea(name="medicalHistory" id="medicalHistory")
      div
        button(type="submit") Add Patient
