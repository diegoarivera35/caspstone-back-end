doctype html
html
  head
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH' crossorigin='anonymous')
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js' integrity='sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz' crossorigin='anonymous')
    script(src='https://kit.fontawesome.com/934566fbc5.js', crossorigin='anonymous')
    link(rel='stylesheet', href='/css/styles.css')
    title= patient.name
  body.container-fluid
    a.btn.btn-primary.mt-4(href="/patients") <i class="fa-solid fa-angle-left"></i> Back 
    .container.col-xs-12.col.sm-10.col-md-4.col-lg-4.mt-5
      .indexCardDetail
        .card-body
          div.indexTitle
            h5 <i class="fa-solid fa-bed-pulse"></i>
            h5.card-title=patient.firstName + " " +patient.lastName
          div.groove
          p.d-flex.flex-column 
            strong Email:
            | #{patient.email}
          p.d-flex.flex-column 
            strong Phone:
            | #{patient.phone}
          p.d-flex.flex-column 
            strong Age:
            | #{patient.age}
          p.d-flex.flex-column 
            strong Address:
            | #{patient.address}
          p.d-flex.flex-column 
            strong Blood Type:
            | #{patient.bloodType}      
          p.d-flex.flex-column 
            strong Medical History:
            | #{patient.medicalHistory}
          div.d-flex.justify-content-end.gap-2
            a.btn.btn-primary.mt-4(href=`/patients/${patient._id}/edit`) <i class="fa-solid fa-pen"></i> Edit
            //- Delete patient button:
            //- form(action=`/patients/${patient._id}?_method=DELETE` method="POST" style="display:inline")
            //-   button.btn.btn-danger.mt-4(type="submit") <i class="fa-solid fa-trash"></i> Delete
            if patient.isActive
              form(action=`/patients/${patient._id}?_method=DELETE` method='POST')
                button.btn.btn-danger.mt-4(type='submit') <i class="fa-solid fa-user-slash"></i> Deactivate
            else
              form(action=`/patients/${patient._id}/reactivate?_method=PATCH` method='POST')
                button.btn.btn-success.mt-4(type='submit') <i class="fa-solid fa-user-plus"></i> Reactivate
