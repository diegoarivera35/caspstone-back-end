doctype html
html
  head
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH' crossorigin='anonymous')
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js' integrity='sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz' crossorigin='anonymous')
    title= user.name
  body.container-fluid
    a.btn.btn-primary.mt-4(href="/users") Back 
    .container.col-xs-12.col.sm-10.col-md-4.col-lg-4.mt-5
      .card
        .card-body
          h1.text-capitalize= user.firstName + ' ' + user.lastName
          p.d-flex.flex-column 
            strong Email:
            | #{user.email}
          p.d-flex.flex-column 
            strong Creation Date:
            | #{user.date}
          p.d-flex.flex-column 
            strong User Type:
            | #{user.userType}
          p.d-flex.flex-column 
            strong is Verified?:
            | #{user.isVerified}
          div.d-flex.justify-content-end.gap-2
            a.btn.btn-primary.mt-4(href=`/users/${user._id}/edit`) Edit
            a.btn.btn-primary.mt-4(href="/users") Back
