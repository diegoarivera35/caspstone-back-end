doctype html
html
  head
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH' crossorigin='anonymous')
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js' integrity='sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz' crossorigin='anonymous')
    script(src='https://kit.fontawesome.com/934566fbc5.js', crossorigin='anonymous')
    link(rel='stylesheet', href='/css/styles.css')
    title Users
  body
    .container-fluid
      h1 Users
      a.btn.btn-primary.mt-4(href="/admin/dashboard") Dashboard 
      a.btn.btn-primary.m-2.float-end.mb-5(href="/users/new") + Add New User
      .container
        table.table.table-bordered
          thead.table-light
            tr
              th Email
              th User Type
              th Date
              th Verified
              th Actions
          tbody
            each user in users
              tr
                td= user.email
                td= user.userType
                td= user.date
                td= user.isVerified
                td.d-flex.flex-column
                  a.btn.btn-primary.m-1(href=`/users/${user._id}`) View
                  a.btn.btn-primary.m-1(href=`/users/${user._id}/edit`) Edit
                  form(action=`/users/${user._id}?_method=DELETE` method="POST" style="display:inline")
                    button.btn.btn-danger.m-1(type="submit") Delete
