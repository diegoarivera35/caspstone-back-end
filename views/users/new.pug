doctype html
html
  head
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH' crossorigin='anonymous')
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js' integrity='sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz' crossorigin='anonymous')
    title Add New User
  body.container-fluid
    h1 Add New User
    a.btn.btn-primary.mt-4(href="/users") Back 
    .container.col-xs-12.col.sm-10.col-md-4.col-lg-4
     form(action="/users" method="post")
        div
          label.form-label(for="email") Email:
          input.form-control(type="email" name="email" id="email")
        div
          label.form-label(for="password") Password:
          input.form-control(type="password" name="password" id="password")
        div
          label.form-label(for="password2") Confirm Password:
          input.form-control(type="password" name="password2" id="password2")
        div
          label.form-label(for="userType") User Type:
          select(name="userType" id="userType" class="form-select")
            option(value="Patient") Patient
            option(value="Doctor") Doctor
            option(value="Admin") Admin
        div
          button.btn.btn-primary.mt-4.float-end(type="submit") Add User
