doctype html
html
  head
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH' crossorigin='anonymous')
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js' integrity='sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz' crossorigin='anonymous')
    script(src='https://kit.fontawesome.com/934566fbc5.js', crossorigin='anonymous')
    link(rel='stylesheet', href='/css/styles.css')    
    title Medical Centers
  body
    .container-fluid
      div.d-flex.flex-row.justify-content-between
        a.btn.btn-primary.m-0(href="/admin/dashboard") <i class="fa-solid fa-house"></i> Dashboard 
        h2.text-center.m-0 Medical Centers
        a.btn.btn-primary.m-0(href="/medicalcenters/new") <i class="fa-solid fa-circle-plus"></i> Add New MedicalCenter
      .container-fluid.dashboard
        .container-fluid.d-flex.gap-5.flex-wrap.ultimaHora
              each medicalcenter in medicalcenters
                a.indexCard.text-dark(href=`/medicalcenters/${medicalcenter._id}`)
                  div.d-flex.flex-column.h-100
                    div.indexTitle
                      h5 <i class="fa-solid fa-hospital"></i>
                      h5.card-title=medicalcenter.name
                    div.groove
                    div.d-flex.flex-column
                      p.d-flex.flex-column 
                        strong Address:
                        | #{medicalcenter.address}
                      p.d-flex.flex-column 
                        strong Phone:
                        | #{medicalcenter.phone}                   
                    div.actionCard Details <i class="fa-solid fa-chevron-right"></i>


