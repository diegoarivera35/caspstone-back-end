doctype html
html
  head
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH' crossorigin='anonymous')
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js' integrity='sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz' crossorigin='anonymous')
    title Add New Medical Center
  body.container-fluid
    h1 Add New Medical Center
    a.btn.btn-primary.mt-4(href="/medicalcenters") Back 
    .container.col-xs-12.col.sm-10.col-md-4.col-lg-4
      form(action="/medicalcenters" method="POST")
        div
          label.form-label(for="name") Medical Center:
          input.form-control(type="text" name="name" id="name" required)
        div
          label.form-label(for="address") Address:
          input.form-control(type="text" name="address" id="address" required)
        div      
          label.form-label(for="phone") Phone:
          input.form-control(type="text" name="phone" id="phone" required)
        div
          button.btn.btn-primary.mt-4.float-end(type="submit") Add Medical Center
