doctype html
html
  head
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css', rel='stylesheet', integrity='sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH', crossorigin='anonymous')
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js', integrity='sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz', crossorigin='anonymous')
    script(src='https://kit.fontawesome.com/934566fbc5.js', crossorigin='anonymous')
    link(rel='stylesheet', href='/css/styles.css')
    title Index
  body
    .container-fluid.dashboard
      .navDashboard
        .containerOne
          img.card-img(src='/images/logo.svg', alt='logo')
          h1 Welcome to MedLinked
        .containerTwo
          if user
            .userLogged
              div.user <i class="fa-solid fa-user"></i> #{user.email}
              form(action='/api/users/logout', method='GET')
                button.btn.btn-primary.m-2(type='submit') <i class="fa-solid fa-right-from-bracket"></i> Logout
          else
            div.d-flex.justify-content-end
              a.btn.btn-primary.m-2(href='/api/users/login') Login
              br
              a.btn.btn-primary.m-2(href='/api/users/register') Register
      .container-fluid.d-flex.gap-3.flex-wrap.ultimaHora
        a.card.text-bg-dark(href='/Patients')
          img.card-img(src='/images/patient.jpg', alt='patient')
          .card-img-overlay
            div
              h5.card-title <i class="fa-solid fa-bed-pulse"></i> Patients
              p.card-text
                small Last updated 3 mins ago
            p.actionCard See Patients <i class="fa-solid fa-chevron-right"></i>

        a.card.text-bg-dark(href='/Doctors')
          img.card-img(src='/images/doctor.jpg', alt='doctor')
          .card-img-overlay
            div
              h5.card-title <i class="fa-solid fa-user-doctor"></i> Doctors
              p.card-text
                small Last updated 3 mins ago
            p.actionCard See Doctors <i class="fa-solid fa-chevron-right"></i>

