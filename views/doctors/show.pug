doctype html
html
  head
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH' crossorigin='anonymous')
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js' integrity='sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz' crossorigin='anonymous')
    script(src='https://kit.fontawesome.com/934566fbc5.js', crossorigin='anonymous')
    link(rel='stylesheet', href='/css/styles.css')
    title= doctor.name
  body.container-fluid
    a.btn.btn-primary.mt-4(href="/doctors") <i class="fa-solid fa-chevron-left"></i> Doctors 
    .container.col-xs-12.col-sm-10.col-md-4.col-lg-4.mt-5
      .card
        .card-body
          h1.text-capitalize= doctor.firstName + ' ' + doctor.lastName
          p.d-flex.flex-column 
            strong Email:
            | #{doctor.email}
          p.d-flex.flex-column 
            strong Phone:
            | #{doctor.phone}
          p.d-flex.flex-column 
            strong Specialization:
            | #{doctor.specialization}
          p  
            strong Appointments:
          ol
            each appointment in doctor.appointments
              li
                div.d-flex.flex-row.align-items-center 
                  p.mb-0 #{appointment.date} 
                  a.btn.btn-primary.mb-4(href=`/appointments/${appointment._id}`) <i class="fa-solid fa-chevron-right"></i>  

          div.d-flex.justify-content-end.gap-2
            a.btn.btn-primary.mt-4(href=`/doctors/${doctor._id}/edit`) <i class="fa-solid fa-pen"></i> Edit
