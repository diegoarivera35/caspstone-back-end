doctype html
html
  head
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH' crossorigin='anonymous')
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js' integrity='sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz' crossorigin='anonymous')
    title Edit Doctor
  body.container-fluid
    h1 Edit Doctor
    a.btn.btn-primary.mt-4(href="/doctors") Back 
    .container.col-xs-12.col.sm-10.col-md-4.col-lg-4
      form(action=`/doctors/${doctor._id}?_method=PATCH` method="POST")
        div
          label.form-label(for="firstName") First Name:
          input.form-control(type="text" name="firstName" id="firstName" value=doctor.firstName required)
        div
          label.form-label(for="lastName") Last Name:
          input.form-control(type="text" name="lastName" id="lastName" value=doctor.lastName required)
        div      
          label.form-label(for="email") Email:
          input.form-control(type="email" name="email" id="email" value=doctor.email required)
        div
          label.form-label(for="phone") Phone:
          input.form-control(type="text" name="phone" id="phone" value=doctor.phone required)
        div
          label.form-label(for="specialization") Specialization:
          input.form-control(type="text" name="specialization" id="specialization" value=doctor.specialization required)
        div
          button.btn.btn-primary.mt-4.float-end(type="submit") Update Doctor
