doctype html
html
  head
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH' crossorigin='anonymous')
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js' integrity='sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz' crossorigin='anonymous')
    title Edit MedicalProcedure
  body.container-fluid
    h1 Edit MedicalProcedure
    a.btn.btn-primary.mt-4(href="/medicalprocedures") Back 
    .container.col-xs-12.col.sm-10.col-md-4.col-lg-4
      form(action=`/medicalprocedures/${medicalprocedure._id}?_method=PATCH` method="POST")
        div
          label.form-label(for="name") Medical Procedure:
          input.form-control(type="name" name="name" id="name" value=medicalprocedure.name required)
        div
          label.form-label(for="description") Description:
          input.form-control(type="text" name="description" id="description" value=medicalprocedure.description required)
        div      
          label.form-label(for="cost") Cost:
          input.form-control(type="number" name="cost" id="cost" value=medicalprocedure.cost required)
        div
          button.btn.btn-primary.mt-4.float-end(type="submit") Update Medical Procedure
