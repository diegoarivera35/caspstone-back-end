    title MedicalProcedures
  body
    .container-fluid
      div.d-flex.flex-row.justify-content-between
        a.btn.btn-primary.m-0(href="/admin/dashboard") <i class="fa-solid fa-house"></i> Dashboard 
        h2.text-center.m-0 Medical Procedures
        a.btn.btn-primary.m-0(href="/medicalprocedures/new") <i class="fa-solid fa-circle-plus"></i> Add a New Medical Procedure
      .container-fluid.dashboard
        .container-fluid.d-flex.gap-5.flex-wrap.ultimaHora
            each medicalprocedure in medicalprocedures
              a.indexCard.text-dark(href=`/medicalprocedures/${medicalprocedure._id}`)
                div.d-flex.flex-column.h-100
                  div.indexTitle
                    h5 <i class="fa-solid fa-syringe"></i>
                    h5.card-title=medicalprocedure.name
                  div.groove
                  div.d-flex.flex-column
                    p.d-flex.flex-column 
                      strong Description:
                      | #{medicalprocedure.description}
                    p.d-flex.flex-column 
                      strong Cost:
                      | $#{medicalprocedure.cost}                   
                  div.actionCard Details <i class="fa-solid fa-chevron-right"></i>
























