doctype html
html
  head
    title Add New Payment
    link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css')
  body.container
    h1.mt-4 Add New Payment
    a.btn.btn-primary.mt-4(href='/payments') Back
    .container.col-xs-12.col-sm-10.col-md-6.col-lg-6
      form(action='/payments' method='POST')
        div
          label.form-label(for='amount') Amount:
          input.form-control(type='number' name='amount' id='amount' required)
        div
          label.form-label(for='appointmentId') Select Appointment:
          select.form-select(name='appointmentId' id='appointmentId' required)
            if pendingAppointments && pendingAppointments.length
              each appointment in pendingAppointments
                option(value=appointment._id)= appointment.patientId.firstName + ' ' + appointment.patientId.lastName + ' - ' + appointment.date.toDateString()
            else
              option(disabled selected) No pending appointments available
        div
          button.btn.btn-primary.mt-4.float-end(type='submit') Add Payment
