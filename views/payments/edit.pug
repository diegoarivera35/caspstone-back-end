doctype html
html
  head
    title Edit Payment
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH' crossorigin='anonymous')
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js' integrity='sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz' crossorigin='anonymous')
  body.container-fluid
    h1.mt-4 Edit Payment
    a.btn.btn-primary.mt-4(href="/payments") Back 
    .container.col-xs-12.col.sm-10.col-md-6.col-lg-4
      form(action=`/payments/${payment._id}?_method=PATCH` method="POST")
        div.mb-3
          label.form-label(for="amount") Amount:
          input.form-control(type="number" name="amount" id="amount" value=`${payment.amount}` required)
        div.mb-3
          label.form-label(for="date") Date:
          input.form-control(type="date" name="date" id="date" value=`${payment.date.toISOString().substring(0, 10)}` required)
        div.mb-3
          label.form-label(for="status") Status:
          select.form-select(name="status" id="status" required)
            option(value="pending" selected=(payment.status === 'pending')) Pending
            option(value="completed" selected=(payment.status === 'completed')) Completed
            option(value="failed" selected=(payment.status === 'failed')) Failed
        div
          button.btn.btn-primary.mt-4.float-end(type="submit") Update Payment
